nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  .container
    if auth
      a.navbar-brand(href="/") Myapp
    else
      a.navbar-brand(href="/auth/login") Myapp
    button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarContents")
      span.navbar-toggler-icon
    #navbarContents.collapse.navbar-collapse
      if auth
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          li.nav-item
            a.nav-link(href="/allGroups") All groups
          li.nav-item
            a.nav-link(href="/") New list
      else
        div.me-auto
      ul.navbar-nav
        if !auth
          li.nav-item
            a.nav-link(href="/auth/login") เข้าสู่ระบบ
          li.nav-item
            a.btn.btn-outline-primary.ms-md-3(href="/auth/register") สมัครสมาชิก
        else
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle.pointer.unselectable(data-bs-toggle="dropdown")= auth.username
            ul.dropdown-menu
              li
                a.dropdown-item.no-copy(href=`/profile/${auth.username}`)
                  i.bi.bi-gear-wide-connected.me-2
                  span ตั้งค่าบัญชี
              li
                hr.dropdown-divider
              li
                a.dropdown-item(href="/auth/logout")
                  i.bi.bi-box-arrow-right.me-2
                  span ออกจากระบบ

